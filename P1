-- Create table
CREATE TABLE Employees (
    EmployeeID INT PRIMARY KEY,
    FirstName VARCHAR(50),
    LastName VARCHAR(50),
    BirthDate DATE,
    Position VARCHAR(50),
    Salary DECIMAL(10, 2)
);

-- Insert data
INSERT INTO Employees (EmployeeID, FirstName, LastName, BirthDate, Position, Salary)
VALUES
(1, 'John', 'Doe', '1980-01-15', 'Manager', 60000),
(2, 'Jane', 'Smith', '1985-03-22', 'Developer', 55000),
(3, 'Sam', 'Brown', '1990-07-30', 'Designer', 50000);

-- Select data
SELECT * FROM Employees;

-- Update data
UPDATE Employees
SET Salary = 58000
WHERE EmployeeID = 2;

-- Delete data
DELETE FROM Employees
WHERE EmployeeID = 3;

-- Select specific columns
SELECT FirstName, LastName, Position
FROM Employees;

-- Filtering with WHERE clause
SELECT * FROM Employees
WHERE Salary > 55000;

-- Sorting results
SELECT * FROM Employees
ORDER BY LastName ASC;

-- Aggregate functions
SELECT AVG(Salary) AS AverageSalary
FROM Employees;

-- Grouping results
SELECT Position, COUNT(*) AS NumberOfEmployees
FROM Employees
GROUP BY Position;

-- Join tables (assuming another table 'Departments' exists)
SELECT Employees.FirstName, Employees.LastName, Departments.DepartmentName
FROM Employees
JOIN Departments ON Employees.DepartmentID = Departments.DepartmentID;

-- Create index
CREATE INDEX idx_lastname
ON Employees (LastName);
